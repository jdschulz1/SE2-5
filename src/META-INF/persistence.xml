<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="Team5DT" transaction-type="RESOURCE_LOCAL">
         <class>model.Client</class>
         <class>model.Courier</class>
         <class>model.DeliveryTicket</class>
         <class>model.Intersection</class>
         <class>model.Street</class>
         <class>model.TrafficImpediment</class>
         <class>model.User</class>
         <class>dtDAO.LocalDateTimeConverter</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Team5DT" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
            
            <property name="eclipselink.logging.level" value="INFO" />
			<property name="eclipselink.ddl-generation" value="create-tables" />
        </properties>
    </persistence-unit>
</persistence>